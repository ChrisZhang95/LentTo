<h2>Add a rating:</h2>
<%= form_with(model: [ @item, @item.ratings.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :'How would you rate this item ?' %><br>
    <%= form.select :score, ['1', '2', '3','4','5'], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :comment %><br>
    <%= form.text_area :comment, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit class: "form-control"%>
  </div>
<% end %>