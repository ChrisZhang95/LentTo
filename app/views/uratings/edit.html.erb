<h1>Edit Comment</h1>

<%= form_for @urating, url: {action: "update"} do |form| %>
  <div class="form-group">
    <%= form.label :'How would you rate this user ?' %><br>
    <%= form.select :score, ['1', '2', '3','4','5'], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :comment %><br>
    <%= form.text_area :comment, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit class: "form-control"%>
  </div>
<% end %>


<%= link_to 'Back', transaction_uratings_path, class: "btn btn-warning" %>
