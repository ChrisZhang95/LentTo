<!DOCTYPE html>
<html>
    <head>
        <%= stylesheet_link_tag "home" %>
        <%= stylesheet_link_tag "announcements" %>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    </head>
    
    <script>


    </script>

    <body>
    
      <%= render 'home/newsfeed_carousel' %>
      <section class="container white shadow p-3 mb-5 bg-white rounded" id="main_body">
        <h1 class="text-center">Edit Announcement Information</h1>

        <%= form_with(model: @announcement, local: true) do |form| %>
          <% if @announcement.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@announcement.errors.count, "error") %> prohibited
                this announcement from being saved:
              </h2>
              <ul>
                <% @announcement.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>  

        <form>
          <div class="form-group">
            <label class="h5 bold" for="item_id">Title</label>
            <%= form.text_field :title, class: 'form-control', id: "item_id" , value: @announcement.title %> 
            <small id="item_help" class="form-text text-muted">Title of caption.</small>
          </div>

          <div class="form-group">
            <label class="h5 bold" for="start_date">Caption</label>
            <%= form.text_field :caption,  class: 'form-control', id: "caption" , value: @announcement.caption %> 
            <small id="start_date" class="form-text text-muted">Caption of announcement.</small>
          </div>

          <div class="form-group">
            <label class="h5 bold" for="end_date">End Date</label>
            <%= form.text_area :descroption,  class: 'form-control', id: "end_date" , value: @announcement.description %> 
            <small id="end_date" class="form-text text-muted">Description of announcement.</small>
          </div>

            <div class="form-group">
            <div class="custom-file">
              <%= form.file_field :image, multiple: false, class: "custom-file-input" %>
              <%= form.label :image, "Select Image", class:"custom-file-label" %>
            </div>
          </div>


          <div class="p-5">  
            <%= form.submit 'Submit', class: "btn btn-success btn-lg btn-block" %>
          </div>

        </form>
        <% end %>  

        <div class="p-5">  
            <%= link_to "Back", announcements_path, :class => "btn btn-primary btn-lg btn-block" %>
        </div>
      </section>
        


</html>